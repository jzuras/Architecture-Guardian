{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "RepositoryCloning": {
    // Which coding agent to convert paths for (ClaudeCode = WSL paths, GeminiCli = Windows paths, LocalFoundry = requires file content as context)
    // Note: LocalFoundry is not recommended at this time - see Readme file.
    "CodingAgent": "GeminiCli",

    // BACKGROUND CLEANUP SETTINGS (automated periodic cleanup)
    // How often to CHECK for expired repositories (NOT how long to keep them)
    "CleanupIntervalMinutes": 60,
    // How long to KEEP repositories before deleting them (separate from check interval)
    "MaxRetentionHours": 2,

    // IMMEDIATE CLEANUP SETTING (after validation completes)
    // If true: Delete repository immediately after validation completes
    // If false: Leave repository for background service to clean up after MaxRetentionHours
    "CleanupAfterValidation": true,

    // CLONING BEHAVIOR SETTINGS
    "RetryAttempts": 3,
    "RetryDelaySeconds": 5,
    "TimeoutMinutes": 10
  },
  "GitHubFileExtraction": {
    // Controls file extraction behavior for LocalFoundry validation
    // true = Changed Files Only (more efficient, extracts only files that changed in push/PR)
    // false = All Files (extracts all C# files in repository)
    "ChangedFilesOnly": false,

    // File extension filters for extraction
    "FileExtensions": [".cs"],

    // Limits for file extraction
    "MaxFiles": 50,
    "MaxFileSizeBytes": 102400
  },
  "GitHub": {
    "AppId": "",
    "PrivateKeyFilePath": ""
  }
}
